<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top-left to bottom-right diagonal line -->
    <item android:top="0dp" android:right="0dp" android:bottom="0dp" android:left="0dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape
                android:shape="line">
                <stroke
                    android:width="10dp"
                    android:color="#000000" />
            </shape>
        </rotate>
    </item>

    <!-- Top-right to bottom-left diagonal line -->
    <item android:top="0dp" android:right="0dp" android:bottom="0dp" android:left="0dp">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45">
            <shape
                android:shape="line">
                <stroke
                    android:width="10dp"
                    android:color="#000000" />
            </shape>
        </rotate>
    </item>
</layer-list>